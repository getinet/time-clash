{
  "manifest_version": 3,
  "name": "Time Clash",
  "version": "1.0",
  "description": "Checks for overlapping time entries on your Harvest timesheet.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://*.harvestapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
